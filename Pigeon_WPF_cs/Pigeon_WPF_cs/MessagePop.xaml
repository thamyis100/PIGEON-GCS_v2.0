<Window x:Class="Pigeon_WPF_cs.MessagePop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pigeon_WPF_cs"
        mc:Ignorable="d"
        Title="Keluar dari Pigeon" Height="120" Width="250" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="{x:Null}" AllowsTransparency="True" ShowInTaskbar="False" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Border Background="#7FFFFFFF" CornerRadius="4" BorderThickness="2" BorderBrush="{DynamicResource WindowColor}">
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="tb_info" TextWrapping="Wrap" Text="Anda yakin ingin keluar dari Pigeon?" TextAlignment="Center" Foreground="White" FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="18" VerticalAlignment="Center" Margin="15,10,15,15" DockPanel.Dock="Top"/>
            <DockPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" DockPanel.Dock="Top">
                <Button x:Name="btn_batal" Content="Batal" Margin="0,0,15,0" Width="75" Click="Batal"/>
                <Button x:Name="btn_lanjut" Content="Lanjut" Margin="15,0,0,0" Width="75" Click="Lanjut"/>
            </DockPanel>
        </DockPanel>
    </Border>
</Window>
