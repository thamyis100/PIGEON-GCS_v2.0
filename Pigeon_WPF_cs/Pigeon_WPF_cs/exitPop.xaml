<Window x:Class="Pigeon_WPF_cs.exitPop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pigeon_WPF_cs"
        mc:Ignorable="d"
        Title="Keluar dari Pigeon" Height="200" Width="350" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Background="#7F828282" AllowsTransparency="True" ShowInTaskbar="False">
    <Grid>
        <DockPanel VerticalAlignment="Bottom" Margin="50,0,50,16">
            <Button x:Name="btn_batal" Content="Batal" HorizontalAlignment="Left" Margin="0" Width="75" Click="batal" VerticalAlignment="Bottom"/>
            <Button x:Name="btn_lanjut" Content="Lanjut" Margin="0" HorizontalAlignment="Right" Width="75" Click="keluar" VerticalAlignment="Bottom" DockPanel.Dock="Right"/>
        </DockPanel>
        <TextBlock x:Name="tb_info" Margin="50,15,50,30" TextWrapping="Wrap" Text="Anda yakin ingin keluar dari Pigeon?" TextAlignment="Center" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" FontFamily="Segoe UI Black" FontSize="18"/>

    </Grid>
</Window>
