<Window x:Class="Pigeon_WPF_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pigeon_WPF_cs"
        xmlns:controls="clr-namespace:Pigeon_WPF_cs.Custom_UserControls"
        mc:Ignorable="d"
        KeyUp="toggleRecog"
        
        Title="PIGEON GCS" Height="720" Width="1280" WindowStyle="SingleBorderWindow" ResizeMode="CanResize" WindowStartupLocation="CenterScreen" MinWidth="1280" MinHeight="720" Icon="Resources/logo/pigeonlogo.png" WindowState="Maximized">
    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="leftPaneButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="0" IsEnabled="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="480*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="1163*"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF6A6A6A" Offset="0.316"/>
                    <GradientStop Color="#FF1F1F1F" Offset="1"/>
                    <GradientStop Color="#FF8F8F8F"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Image x:Name="logo_pigeon" Source="Resources/logo/pigeon.png" RenderOptions.BitmapScalingMode="HighQuality" VerticalAlignment="Top" Margin="8,5,8,0" UseLayoutRounding="False">
                <Image.Effect>
                    <DropShadowEffect ShadowDepth="3" Direction="275" BlurRadius="0"/>
                </Image.Effect>
            </Image>
            <DockPanel Margin="8,0,8,3" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <Label x:Name="logo_label_an" Content="an" VerticalAlignment="Top" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" HorizontalAlignment="Center" Foreground="#FFBBBBBB" FontWeight="Bold" FontFamily="Segoe UI Semibold" FontSize="11"/>
                <Image x:Name="logo_efalcongcs" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" Source="Resources/logo/efalcon-gcs.png" HorizontalAlignment="Center" Margin="5,0,0,0" DockPanel.Dock="Right" UseLayoutRounding="False">
                    <Image.Effect>
                        <DropShadowEffect ShadowDepth="1" Direction="208" BlurRadius="3" Color="White"/>
                    </Image.Effect>
                </Image>
            </DockPanel>
        </Grid>
        <Grid Background="#FF1F1F1F" Margin="0" MouseLeftButtonDown="clickedWindow" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <!--<Button Click="muteVoice"  Grid.ColumnSpan="4" HorizontalAlignment="Center" VerticalAlignment="Bottom" >
                <Label Content="Mute" FontSize="11"/>
            </Button>-->
            <StackPanel Grid.ColumnSpan="4" VerticalAlignment="Top" Margin="0,15,0,0">
                <Label x:Name="bhs_lbl" Content="Language :" Foreground="White" HorizontalContentAlignment="Center"/>
                <WrapPanel HorizontalAlignment="Center">
                    <Button x:Name="bhs_indo" Background="Lime" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="{x:Null}" Padding="2" BorderThickness="0" Margin="0" Click="ubah_bahasa">
                        <Image Source="Resources/icons/Flag_of_Indonesia.png" Height="12" Stretch="Fill" Width="22"/>
                    </Button>
                    <Button x:Name="bhs_inggris" VerticalAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" BorderThickness="0" Padding="2" Margin="5,0,0,0" Click="ubah_bahasa">
                        <Image Source="Resources/icons/Flag_of_the_United_Kingdom.png" Height="12" RenderTransformOrigin="0.5,0.5" Stretch="Fill" Width="22"/>
                    </Button>
                </WrapPanel>
            </StackPanel>

            <Button x:Name="btn_flight" Style="{StaticResource leftPaneButtonStyle}" Grid.ColumnSpan="4" Margin="0,15" Grid.Row="1" Background="{x:Null}" HorizontalContentAlignment="Stretch" Padding="0" VerticalContentAlignment="Stretch" BorderThickness="0" MouseEnter="hoverButton" MouseLeave="dehoverButton" Click="selectTab" Tag="">
                <Grid Margin="0" MinWidth="117">
                    <Rectangle x:Name="rect_flight" Fill="#FF008C8C" Stroke="Black" Width="5" StrokeThickness="0" HorizontalAlignment="Left"/>
                    <DockPanel Margin="0,5">
                        <Label x:Name="lbl_flight" Content="Flight" HorizontalAlignment="Center" Margin="-2,0,0,0" VerticalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.5,0.5" Foreground="White" FontSize="14">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                        <Image x:Name="icon_flight" Source="Resources/icons/icons8-wasp.png" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    </DockPanel>
                </Grid>
            </Button>
            <Button x:Name="btn_map" Style="{StaticResource leftPaneButtonStyle}" Grid.ColumnSpan="4" Margin="0,15" Grid.Row="2" Background="{x:Null}" HorizontalContentAlignment="Stretch" Padding="0" VerticalContentAlignment="Stretch" BorderThickness="0" MouseLeave="dehoverButton" MouseEnter="hoverButton" Click="selectTab" ToolTip="Waypoint Tab">
                <Grid Margin="0">
                    <Rectangle x:Name="rect_map" Fill="#FF008C8C" Stroke="Black" Width="5" StrokeThickness="0" HorizontalAlignment="Left" Margin="0,-5"/>
                    <DockPanel Margin="0,5">
                        <Label x:Name="lbl_map" Content="Waypoint" HorizontalAlignment="Center" Margin="-10,0,0,0" VerticalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.5,0.5" Foreground="White" FontSize="14">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                        <Image x:Name="icon_map" Margin="0,0,10,0" Source="Resources/icons/icons8-waypoint-map-50.png" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    </DockPanel>
                </Grid>
            </Button>
            <Button x:Name="btn_stats" Style="{StaticResource leftPaneButtonStyle}" Grid.ColumnSpan="4" Margin="0,15" Grid.Row="3" Background="{x:Null}" HorizontalContentAlignment="Stretch" Padding="0" VerticalContentAlignment="Stretch" BorderThickness="0" MouseEnter="hoverButton" MouseLeave="dehoverButton" Click="selectTab">
                <Grid Margin="0" MinWidth="117">
                    <Rectangle x:Name="rect_stats" Fill="#FF008C8C" Stroke="Black" Width="5" StrokeThickness="0" HorizontalAlignment="Left"/>
                    <DockPanel Margin="0,5">
                        <Label x:Name="lbl_stats" Content="Stats" HorizontalAlignment="Center" Margin="1,0,0,0" VerticalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.5,0.5" Foreground="White" FontSize="14">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                        <Image x:Name="icon_stats" Margin="0,0,10,0" Source="Resources/icons/icons8-statistics-50.png" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right"/>
                    </DockPanel>
                </Grid>
            </Button>
            <Button x:Name="btn_track" Style="{StaticResource leftPaneButtonStyle}" Grid.ColumnSpan="4" Margin="0,15" Grid.Row="4" Background="{x:Null}" HorizontalContentAlignment="Stretch" Padding="0" VerticalContentAlignment="Stretch" BorderThickness="0" BorderBrush="{x:Null}" MouseEnter="hoverButton" MouseLeave="dehoverButton" Click="selectTab">
                <Grid Margin="0" MinWidth="117">
                    <Rectangle x:Name="rect_track" Fill="#FF008C8C" Stroke="Black" StrokeThickness="0" HorizontalAlignment="Left" Margin="0" Width="5"/>
                    <DockPanel Margin="0,5">
                        <Label x:Name="lbl_track" Content="Tracker" HorizontalAlignment="Center" Margin="-5,0,0,0" VerticalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" RenderTransformOrigin="0.5,0.5" Foreground="White" FontSize="14">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="-90"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                        <Image x:Name="icon_track" Margin="0,0,10,0" Source="Resources/icons/icons8-gps-antenna-100.png" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </DockPanel>
                </Grid>
            </Button>
            <Button x:Name="btn_help" Content="?" Style="{StaticResource leftPaneButtonStyle}" Margin="10,9.667,0,0" Grid.Row="5" VerticalAlignment="Top" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" FontFamily="Unispace" FontWeight="Bold" RenderTransformOrigin="0.067,1.037" HorizontalAlignment="Left" ToolTip="Help about Pigeon" MouseEnter="hoverButton" MouseLeave="dehoverButton" Padding="0" Width="30" Height="30" VerticalContentAlignment="Center" Grid.ColumnSpan="2" FontSize="16"/>
            <Rectangle x:Name="tab_flight" Grid.Column="3" Fill="#FFE5E5E5" Height="60" Margin="0,0,-50,0" Grid.Row="1" StrokeThickness="0" VerticalAlignment="Center" Width="20"/>
            <Rectangle x:Name="tab_map" Grid.Column="3" Fill="#FFE5E5E5" Height="60" Margin="0,0,-50,0" Grid.Row="2" StrokeThickness="0" VerticalAlignment="Center" Width="20"/>
            <Rectangle x:Name="tab_stats" Grid.Column="3" Fill="#FFE5E5E5" Height="60" Margin="0,0,-50,0" Grid.Row="3" StrokeThickness="0" VerticalAlignment="Center" Width="20"/>
            <Rectangle x:Name="tab_track" Grid.Column="3" Fill="#FFE5E5E5" Height="60" Margin="0,0,-50,0" Grid.Row="4" StrokeThickness="0" VerticalAlignment="Center" Width="20"/>
            <TextBlock x:Name="digital_clock" Margin="5,50,5,0" Grid.Row="5" TextWrapping="Wrap" Text="Waktu Sekarang" VerticalAlignment="Top" Grid.ColumnSpan="4" Foreground="White"/>
        </Grid>
        <Grid Margin="0.667,0,-1,0.333" Grid.Column="1" MouseLeftButtonDown="clickedWindow">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="WhiteSmoke" Margin="0" Stroke="Black" StrokeThickness="0" Grid.ColumnSpan="2"/>
            <Image x:Name="header" Source="Resources/Header.png" Margin="-1,0,0,0" Grid.ColumnSpan="2" RenderOptions.BitmapScalingMode="HighQuality" Stretch="Fill" VerticalAlignment="Top"/>
            
            <Grid Margin="0,10,0,0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="115*"/>
                    <ColumnDefinition Width="62*"/>
                    <ColumnDefinition Width="133*"/>
                    <ColumnDefinition Width="133*"/>
                    <ColumnDefinition Width="133*"/>
                    <ColumnDefinition Width="89*"/>
                </Grid.ColumnDefinitions>
                
                <DockPanel LastChildFill="True" Margin="0" VerticalAlignment="Center" Height="40" HorizontalAlignment="Center" Grid.ColumnSpan="2" Width="155">
                    <Image x:Name="logo_efalcon_status" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Source="Resources/logo/efalcon.png" RenderOptions.BitmapScalingMode="HighQuality" RenderTransformOrigin="0.5,0.5"/>
                    <DockPanel Margin="5,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Label x:Name="lbl_statusLine" Content="OFFLINE" VerticalAlignment="Center" FontFamily="/Pigeon_WPF_cs;component/Resources/fonts/#Commando" FontSize="24" Background="{x:Null}" Foreground="#FF969696" HorizontalAlignment="Center" Margin="0" Padding="0" HorizontalContentAlignment="Center" DockPanel.Dock="Top"/>
                        <WrapPanel DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,-4,0,0">
                            <Label x:Name="lbl_statusWahana" Content="Wahana" HorizontalAlignment="Center" Padding="0" FontFamily="Century Gothic" FontWeight="Bold" Margin="0" VerticalAlignment="Center" FontSize="11"/>
                            <Label x:Name="lbl_statusPlus"  Content=" + " Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" FontSize="11"/>
                            <Label x:Name="lbl_statusTracker" Content="Tracker" HorizontalAlignment="Center" Padding="0" FontFamily="Century Gothic" FontWeight="Bold" Margin="0" VerticalAlignment="Center" FontSize="11"/>
                        </WrapPanel>
                    </DockPanel>
                </DockPanel>
                <DockPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Margin="12,0,14.667,0" DockPanel.Dock="Top">
                        <Image x:Name="icon_signal_0" HorizontalAlignment="Center" Height="30" Margin="0" VerticalAlignment="Center" Width="30" Source="Resources/icons/icons8-wi-fi-50.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Image x:Name="icon_signal_1" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Source="Resources/icons/icons8-wi-fi-filled-50.png" Height="30" Width="30" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>
                    <Label x:Name="lbl_signal" Content="Sinyal" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14"/>
                    <Label x:Name="val_signal" Content="(N/A)" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="0" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="14" FontFamily="./#Raleway SemiBold" Margin="3,0,0,-3" FontWeight="Bold"/>
                </DockPanel>
                <DockPanel Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40">
                    <Label x:Name="lbl_flightTime" Content="Waktu Terbang" HorizontalAlignment="Center" Margin="0" Padding="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" DockPanel.Dock="Top" FontFamily="./#Raleway" FontSize="14"/>
                    <Label x:Name="val_flightTime" Content="00:00:00" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Padding="0,3,0,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" FontFamily="UD Digi Kyokasho NP-B" DockPanel.Dock="Top"/>
                </DockPanel>
                <Button x:Name="btn_exit" Height="40" VerticalAlignment="Center" BorderThickness="0" Background="{x:Null}" Padding="0" Grid.Column="5" Width="40" Click="closeApp" HorizontalAlignment="Left" Margin="20,0,0,0">
                    <Image x:Name="icon_exit" Source="Resources/icons/icons8-shutdown-50.png" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </Button>
                <DockPanel Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid Margin="0,0,0,5" HorizontalAlignment="Center" VerticalAlignment="Center" Height="20" DockPanel.Dock="Top">
                        <Image x:Name="icon_bat_0" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Source="Resources/icons/bat-empty.png" RenderTransformOrigin="0.5,0.5" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <Image x:Name="icon_bat_1" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" Source="Resources/icons/bat-full.png" RenderTransformOrigin="0.5,0.5" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Grid>
                    <Label x:Name="lbl_batt" Content="Batt" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" FontSize="14" Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Label x:Name="val_batt" Content="(N/A)" HorizontalAlignment="Center" Margin="5,0,0,-1" VerticalAlignment="Center" FontSize="14" Padding="0" FontFamily="Raleway SemiBold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                </DockPanel>
            </Grid>
        </Grid>

        <!-- imagine this is a tab control area-->
        <Border Grid.Row="1" Grid.Column="1" Margin="20,10,10,10" BorderBrush="#FFA8A8A8" BorderThickness="2">
            <Grid>
                <Grid x:Name="mapGrid" HorizontalAlignment="Left" Width="480" VerticalAlignment="Top" Height="580">
                    <controls:Waypoint x:Name="map_Ctrl" HorizontalAlignment="Stretch"/>
                </Grid>
                <controls:FlightControl x:Name="flight_Ctrl"/>
                <controls:StatisticControl x:Name="stats_Ctrl" Visibility="Hidden"/>
                <controls:TrackerControl x:Name="track_Ctrl" Visibility="Hidden"/>
            </Grid>
        </Border>
        <!-- tab control area, up to this point-->

    </Grid>
</Window>
