<UserControl x:Class="Pigeon_WPF_cs.Custom_UserControls.FlightControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pigeon_WPF_cs.Custom_UserControls"
             xmlns:gmaps="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             mc:Ignorable="d" 
             d:DesignHeight="455" d:DesignWidth="830">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="130*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="judul_flight" Content="Flight View" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" FontFamily="Century Gothic" FontWeight="Bold" Foreground="#FF0B7074" Margin="0" Padding="10,5" Height="47" Width="175"/>
        <Grid Margin="5,5.667,5,4.667" Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80*"/>
                <ColumnDefinition Width="80*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="180*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>
            <gmaps:GMapControl x:Name="theMap" Loaded="theMapLoad" MouseWheelZoomEnabled="True" CanDragMap="True" MaxZoom="18" BorderBrush="Black" BorderThickness="1" Margin="0,0,0.333,0" Grid.ColumnSpan="2"/>
            <DockPanel Margin="0,3,10,0" Grid.Row="1" Background="Gainsboro">
                <Label Content="Lintang" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="0" Margin="5,0,0,0" FontFamily="Century Gothic"/>
                <TextBox x:Name="tb_lat" Text="-00.000000000" VerticalContentAlignment="Center" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0" Margin="0,3,5,3" Width="95"/>
            </DockPanel>
            <DockPanel Margin="10,3,0,0" Grid.Row="1" Background="Gainsboro" Grid.Column="1">
                <Label Content="Bujur" FontFamily="Century Gothic" Padding="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox x:Name="tb_longt" Text="-000.000000000" VerticalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Center" DockPanel.Dock="Right" Width="95" Margin="0,0,5,0"/>
            </DockPanel>
        </Grid>
        <Grid Grid.Column="1" Margin="112,142.667,36,27.667" Grid.RowSpan="2" Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="180*"/>
                <RowDefinition Height="15*"/>
            </Grid.RowDefinitions>
            <Border Margin="0" VerticalAlignment="Top" BorderBrush="Black" BorderThickness="1">
                <Image x:Name="liveCam" Height="304" Margin="0" VerticalAlignment="Bottom"/>
            </Border>
            <DockPanel Margin="0,3,0,0" Grid.Row="1">
                <ComboBox Margin="0" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="100" SelectedItem="{Binding CurrentCamera}" ItemsSource="{Binding Cams}"/>
            </DockPanel>
        </Grid>
        <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFFFB4B4" Padding="2" CornerRadius="2">
            <DockPanel LastChildFill="False" Margin="2,0,0,0" VerticalAlignment="Center">
                <Label x:Name="label" Content="Connection :" HorizontalAlignment="Left" Height="21" Margin="0" VerticalAlignment="Center" Width="81" Padding="0" FontSize="14"/>
                <ComboBox x:Name="cb_ports" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" SelectedItem="{Binding selectedPort}" ItemsSource="{Binding sPorts}" Width="100" SelectionChanged="Cb_ports_SelectionChanged"/>
                <ComboBox x:Name="cb_bauds" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" SelectedItem="{Binding selectedBaud}" Width="100" VerticalContentAlignment="Center">
                    <ComboBoxItem>9600</ComboBoxItem>
                    <ComboBoxItem>19200</ComboBoxItem>
                    <ComboBoxItem>57600</ComboBoxItem>
                    <ComboBoxItem>115200</ComboBoxItem>
                    <ComboBoxItem>128000</ComboBoxItem>
                </ComboBox>
                <Border Background="#FFF0F0F0" Margin="10,0,2,0" CornerRadius="2" BorderBrush="Black" BorderThickness="0.5" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Button Width="30" Height="30" Background="{x:Null}" BorderBrush="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0" Padding="0" Click="startWebcam">
                        <Image x:Name="img_conn" Source="/Pigeon_WPF_cs;component/Resources/icons/icons8-disconnected-80.png" MouseEnter="img_conn_0" MouseLeave="img_conn_1"  Margin="0"/>
                    </Button>
                </Border>
            </DockPanel>
        </Border>

    </Grid>
</UserControl>
